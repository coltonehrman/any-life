{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",

    "outDir": "dist",

    "jsx": "react-jsx",
    "jsxImportSource": "nano-jsx-experiment/lib",

    "declaration": false,

    "allowJs": true,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/app.jsx", "src/**/*.{.js,jsx}"],
  "exclude": ["node_modules", "dist"]
}
